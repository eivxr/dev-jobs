<main class="lista-candidatos">
    {{#if candidatos.length}}

    {{#each candidatos}}
    <div class="candidato">
        <div class="caja">
            <p class="etiqueta">Nombre</p>
            <p class="nombre">{{nombre}}</p>
        </div>
        <div class="caja">
            <p class="etiqueta">Correo</p>
            <p class="nombre">{{email}}</p>
        </div>
        <div class="caja">
            <a href="/uploads/cv/{{cv}}" class="btn btn-azul">Ver cv</a>
        </div>
    </div>
    {{/each}}
    {{else}}
    <p>AÃºn no hay candidatos para esta vacante</p>
    {{/if}}
</main>