<main class="contenedor">
    <form action="POST" class="default-form">
        <h3>Información general</h3>
        <div class="campo">
            <label for="">Titulo</label>
            <input type="text" name="titulo" placeholder="Ej: Desarrollador MERN Stack" required>
        </div>
        <div class="campo">
            <label for="">Empresa</label>
            <input type="text" name="empresa" placeholder="Empresa que contrata" required>
        </div>
        <div class="campo">
            <label for="">Ubicación</label>
            <input type="text" name="titulo" placeholder="Ej: México/Remoto" required>
        </div>
        <div class="campo">
            <label for="">Salario</label>
            <input type="text" name="titulo" placeholder="Ej: $500 USD" required>
        </div>
        <div class="campo">
            <label>Contrato</label>
            <select name="contrato">
                <option value="" selected disabled>--Seleccione--</option>
                <option value="Freelance">Freelance</option>
                <option value="Tiempo completo">Tiempo completo</option>
                <option value="Medio tiempo">Medio tiempo</option>
                <option value="Por obra"> Por obra</option>
            </select>
        </div>

        <h3>Descripción del puesto</h3>
        <div class="campo descripcion">
            <label for="">Descripción</label>
            <input type="hidden" name="descripcion" id="x">
            <trix-editor input="x"></trix-editor>
        </div>

        <ul class="lista-conocimientos">
            {{#seleccionarSkills a}}
            {{/seleccionarSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="submit" value="Publicar" class="btn btn-azul">
        </div>
    </form>

</main>