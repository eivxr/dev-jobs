<main class="contenedor">
    <form action="/editar-perfil" method="POST" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label> Nombre</label>
            <input  value={{usuario.nombre}} type="text" name="nombre" id="" placeholder="Tu nombre" required>
        </div>
        <div class="campo">
            <label>Correo</label>
            <input value={{usuario.email}} type="email" name="email" id="" placeholder="Tu correo" required>
        </div>
        <div class="campo">
            <label>Password</label>
            <input type="password" name="password" id="" placeholder="Tu password">
        </div>
        <div class="campo">
            <label for="">foto del perfil</label>
            <input type="file" name="imagen">
            <img src="uploads/perfiles/{{usuario.imagen}}" class="admin-perfil" alt="">
        </div>

        <div class="campo">
            <input type="submit" value="Guardar cambios" class="btn btn-azul">
        </div>
    </form>
</main>